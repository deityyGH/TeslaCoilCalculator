<Window x:Class="SGTC.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGTC.Views"
        xmlns:vm="clr-namespace:SGTC.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- Nav buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="PrimaryCircuitButton" Content="Primary" Width="100" Padding="5" Command="{Binding PrimaryViewCommand}"/>
            <Button x:Name="SecondaryCircuitButton" Content="Secondary" Width="100" Padding="5" Command="{Binding SecondaryViewCommand}" />
            <Button x:Name="TopLoadButton" Content="Top Load" Width="100" Padding="5" Command="{Binding TopLoadViewCommand}"/>
            
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Button x:Name="ResultButton" Content="Result" Width="100"  HorizontalAlignment="Right" Padding="5" Command="{Binding ResultViewCommand}"/>
        </StackPanel>
        
        <!-- Calculators -->
        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
            <ContentControl Content="{Binding CurrentView}">
                <ContentControl.Resources>
                    <!-- Primary Circuit -->
                    <DataTemplate DataType="{x:Type vm:PrimaryCircuitViewModel}">
                        <local:PrimaryCircuit/>
                    </DataTemplate>

                    <!-- Secondary Circuit -->
                    <DataTemplate DataType="{x:Type vm:SecondaryCircuitViewModel}">
                        <local:SecondaryCircuit/>
                    </DataTemplate>

                    <!-- Top Load -->
                    <DataTemplate DataType="{x:Type vm:TopLoadViewModel}">
                        <local:TopLoad/>
                    </DataTemplate>

                    <!-- Result -->
                    <DataTemplate DataType="{x:Type vm:ResultViewModel}">
                        <local:Result/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
        
    </Grid>

</Window>
