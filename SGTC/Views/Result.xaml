<UserControl x:Class="SGTC.Views.Result"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGTC.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="5,2"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Style for TextBox -->
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="5,2"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </Grid.Resources>

        <!-- Column headers -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontSize="16" Padding="0 5" >Results</TextBlock>

        <!-- Primary coil rows -->
        <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="14" HorizontalAlignment="Center">Primary</TextBlock>

        <TextBlock Grid.Column="0" Grid.Row="2">Resonance</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding PrimaryResonance}" />

        <TextBlock Grid.Column="0" Grid.Row="3">Inductance</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding PrimaryInductance}" />

        <TextBlock Grid.Column="0" Grid.Row="4">Capacitive Reactance (Xc)</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding PrimaryXc}"/>

        <TextBlock Grid.Column="0" Grid.Row="5">Inductive Reactance (Xl)</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding PrimaryXl}"/>

        <TextBlock Grid.Column="0" Grid.Row="6">Wire Length</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding PrimaryWireLength}"/>

        <TextBlock Grid.Column="0" Grid.Row="7">Wire Weight</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding PrimaryWireWeight}"/>

        <TextBlock Grid.Column="0" Grid.Row="8">Coil Height</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="8" Text="{Binding PrimaryHeight}"/>


        <TextBlock Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" FontSize="14" HorizontalAlignment="Center">Secondary</TextBlock>

        <TextBlock Grid.Column="2" Grid.Row="2">Resonance</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="2" Text="{Binding SecondaryResonance}" />

        <TextBlock Grid.Column="2" Grid.Row="3">Inductance</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="3" Text="{Binding SecondaryInductance}" />

        <TextBlock Grid.Column="2" Grid.Row="4">Capacitive Reactance (Xc)</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="4" Text="{Binding SecondaryXc}"/>

        <TextBlock Grid.Column="2" Grid.Row="5">Inductive Reactance (Xl)</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="5" Text="{Binding SecondaryXl}"/>

        <TextBlock Grid.Column="2" Grid.Row="6">Wire Length</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="6" Text="{Binding SecondaryWireLength}"/>

        <TextBlock Grid.Column="2" Grid.Row="7">Wire Weight</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="7" Text="{Binding SecondaryWireWeight}"/>

        <TextBlock Grid.Column="2" Grid.Row="8">Coil Height</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="8" Text="{Binding SecondaryHeight}"/>

        <TextBlock Grid.Column="2" Grid.Row="9">Top Load Capacitance</TextBlock>
        <TextBox Grid.Column="3" Grid.Row="9" Text="{Binding TopLoadCapacitance}"/>
    </Grid>
    
</UserControl>
